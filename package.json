{
  "name": "remix-starter",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "remix vite:build",
    "build:production": "npm test && npm run typecheck && npm run lint && npm run build",
    "dev": "remix vite:dev",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "start": "remix-serve ./build/server/index.js",
    "typecheck": "tsc",
    "preview": "npm test && npm run build && npm start",
    "format": "prettier --write \"app/**/*.{ts,tsx}\"",
    "test": "vitest run app/__tests__/unit-tests",
    "test:watch": "vitest watch app/__tests__/unit-tests",
    "test:integration": "vitest run app/__tests__/integration-tests",
    "test:integration:watch": "vitest watch app/__tests__/integration-tests",
    "test:all": "npm test && npm run test:integration",
    "import-firestore": "node scripts/import-firestore-data.js",
    "fetch-firebase": "node scripts/firebase-data-fetcher.js",
    "test-firebase": "node scripts/test-firebase-config.js",
    "test-ai": "node scripts/test-ai-config.js"
  },
  "dependencies": {
    "@ai-sdk/google": "^2.0.13",
    "@remix-run/node": "^2.17.0",
    "@remix-run/react": "^2.17.0",
    "@remix-run/serve": "^2.17.0",
    "ai": "^5.0.42",
    "firebase": "^11.10.0",
    "firebase-admin": "^12.7.0",
    "flowbite": "^3.1.2",
    "flowbite-react": "^0.12.9",
    "isbot": "^4.4.0",
    "pino": "^9.9.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^5.5.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@remix-run/dev": "^2.17.0",
    "@tailwindcss/postcss": "^4.1.8",
    "@tailwindcss/vite": "^4.1.8",
    "@types/node": "^22.15.23",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "autoprefixer": "^10.4.19",
    "daisyui": "^5.0.40",
    "dotenv": "^16.5.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "postcss": "^8.4.38",
    "postcss-nested": "^7.0.2",
    "prettier": "^2.8.8",
    "tailwind-merge": "^3.3.0",
    "tailwindcss": "^4.1.8",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.4",
    "tw-animate-css": "^1.3.0",
    "typescript": "^5.1.6",
    "vite": "^6.0.0",
    "vite-tsconfig-paths": "^4.2.1",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "overrides": {
    "esbuild": "^0.25.0",
    "estree-util-value-to-estree": "^3.3.3"
  }
}
